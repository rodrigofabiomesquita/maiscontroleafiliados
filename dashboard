<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="UTF-8">
<title>Dashboard Afiliado</title>

<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
</head>
<body>

<h2>Dashboard do Afiliado</h2>
<div id="status">Carregando...</div>

<button onclick="logout()">Sair</button>

<script>
const SUPABASE_URL = "SUA_SUPABASE_URL";
const SUPABASE_KEY = "SUA_SUPABASE_ANON_KEY";

const client = window.supabase.createClient(
  SUPABASE_URL,
  SUPABASE_KEY
);

async function loadAffiliate() {
  const { data: { user } } = await client.auth.getUser();

  if (!user) {
    window.location.href = "index.html";
    return;
  }

  const { data, error } = await client
    .from("affiliates")
    .select("*")
    .eq("user_id", user.id)
    .single();

  if (error) {
    status.innerText = "Erro: " + error.message;
    return;
  }

  status.innerHTML = `
    <p><b>Nome:</b> ${data.name}</p>
    <p><b>Email:</b> ${data.email}</p>
    <p><b>CÃ³digo:</b> ${data.code}</p>
    <p><b>Saldo:</b> R$ ${data.balance}</p>
  `;
}

async function logout() {
  await client.auth.signOut();
  window.location.href = "index.html";
}

loadAffiliate();
</script>

</body>
</html>
